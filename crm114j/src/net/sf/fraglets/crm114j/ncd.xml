<?xml version="1.0" encoding="UTF-8"?>
<dialog gap="0" columns="2"
  modal="true" closable="true"
  name="categoryDialog" text="New Category">
  <label text="i18n.clb.Category.Name"/>
  <textfield name="categoryName" weightx="1" perform="createCategory(this)"/>
  <panel colspan="2" weightx="1">
    <label weightx="1"/>
    <button text="i18n.clb.Create" alignment="right"
      action="createCategory(categoryName)"/>
    <button text="i18n.clb.Cancel" alignment="right"
      action="close(categoryDialog)"/>
  </panel>
</dialog>
