<?xml version="1.0" encoding="UTF-8"?>
<panel columns="2" gap="4">
  <menubar colspan="2" weightx="1">
    <menu text="i18n.clb.File">
      <menuitem text="i18n.clb.Open" action="open()"/>
      <separator/>
      <menuitem text="i18n.clb.Exit" action="exit()"/>
    </menu>
  </menubar>
  <splitpane orientation="vertical" weightx="1" weighty="1">
    <list name="header" action="updateDetails()" selection="single"/>
    <textarea name="details" editable="false">
      <popupmenu name="context"/>
    </textarea>
  </splitpane>
  <slider action="seek(this)" orientation="vertical" maximum="1000000" weighty="1"/>
</panel>
