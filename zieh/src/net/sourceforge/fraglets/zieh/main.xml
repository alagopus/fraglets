<?xml version="1.0" encoding="UTF-8"?>
<panel name="mainpanel" columns="1">
	<menubar weightx="1">
		<menu text="File">
			<menuitem text="Exit" action="exit" />
		</menu>
		<menu text="Help">
			<menuitem text="About" action="about" />
		</menu>
	</menubar>

  <separator />
	<splitpane orientation="horizontal" divider="300"  weightx="1" weighty="1">
		<panel columns="1">
			<combobox name="localPath"/>
			<tree selection="multiple" name="localTree" init="initLocal(this)" weighty="1" weightx="1"/>
		</panel>
		<panel columns="1">
			<combobox name="remotePath" enabled="false"/>
			<tree selection="multiple" name="remoteTree" weighty="1" weightx="1"/>
		</panel>
	</splitpane>
  <separator />
	
	<panel columns="1" top="4" left="4" bottom="4" right="4" gap="4" weightx="1">
	  <label text="--status--"/>
	</panel>
</panel>