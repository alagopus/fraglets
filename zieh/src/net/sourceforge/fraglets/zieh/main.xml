<?xml version="1.0" encoding="ISO-8859-1"?>
<panel name="mainpanel" columns="1">
	<menubar weightx="1">
		<menu text="File">
			<menuitem text="Open" action="actionOpen" />
			<menuitem text="Close" action="actionClose" />
		    <separator />
			<menuitem text="Exit" action="actionExit" />
		</menu>
		<menu text="Help">
			<menuitem text="About" action="actionAbout" />
		</menu>
	</menubar>

  <separator />
	<splitpane orientation="vertical" divider="320" weightx="1" weighty="1">
		<splitpane orientation="horizontal" divider="310" weightx="1" weighty="1">
			<panel columns="1" weightx="1">
				<combobox name="localPath" action="actionLcd" weightx="1"/>
				<table selection="multiple" name="localList" action="localSelect" height="500" weighty="1" weightx="1">
					<column text="Name" width="175" />
					<column text="Size" width="75" />
					<column text="Date" width="40" />
				</table>
				<panel top="4" left="4" bottom="4" right="4" gap="4" weightx="1">
					<button text="Remove" action="actionLocalRemove" halign="left" weightx="1"/>
					<button text="Put" action="actionPut"/>
				</panel>
			</panel>
			<panel columns="1" weightx="1">
				<combobox name="remotePath" action="actionCd" weightx="1"/>
				<table selection="multiple" name="remoteList" action="remoteSelect" height="500" weighty="1" weightx="1">
					<column text="Name" width="175" />
					<column text="Size" width="75" />
					<column text="Date" width="40" />
				</table>
				<panel top="4" left="4" bottom="4" right="4" gap="4" weightx="1">
					<button text="Get" action="actionPut"/>
					<button text="Remove" action="actionRemoteRemove" halign="right" weightx="1"/>
				</panel>
			</panel>
		</splitpane>
	 	<textarea name="sessionChat" action="sessionInsert" editable="true" columns="60" rows="6" weightx="1" weighty="0"/>
	</splitpane>
 	
  <separator />
	
	<panel columns="1" top="4" left="4" bottom="4" right="4" gap="4" weightx="1">
	  <label name="status" text="not connected"/>
	</panel>
</panel>